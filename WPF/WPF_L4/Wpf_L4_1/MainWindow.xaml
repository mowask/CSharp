<Window x:Class="Wpf_L4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_L4"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock></TextBlock>
        
        <Button x:Name="b2" Grid.Row="1" FontSize="24" Content="2"/>
        <Button x:Name="b3" Grid.Row="2" FontSize="24" Content="3"/>
        <Button x:Name="b4" Grid.Row="3" FontSize="24" Content="4"/>
    </Grid>
</Window>
