    <Grid>
        <StackPanel>
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>               
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Calendar x:Name="calendarAppointment" Grid.RowSpan="2" Background="Gray"/>

                <TextBox x:Name="textBoxAppointment" Grid.Column="1" 
                         Padding="5" TextWrapping="Wrap" Height="100"/>

                <Button x:Name="buttonSubmit" 
                        Grid.Row="1" Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Content="Add Appointment"/>

            </Grid>

            <ListBox x:Name="appointmentListBox">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel>
                            <WrapPanel.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Click="MenuItem_Click"
                                        Header="Delete"
                                              Tag="{Binding ID}"/>
                                </ContextMenu>
                            </WrapPanel.ContextMenu>
                            <TextBlock Text="{Binding ID}" Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding Date}"
                                       FontWeight="Bold"
                                       Margin="0 0 10 0"/>
                            <TextBlock Text="{Binding Description}"/>
                        </WrapPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Grid>
                <DatePicker x:Name="datePicker"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10 10 0 0"
                            Height="25"
                            Width="200"/>

                <Button x:Name="btnSubmit"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="220 10 0 0"
                        Width="75"
                        Content="Submit"/>
                
                <TextBlock x:Name="resultTextBlock"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           TextWrapping="Wrap"
                           Margin="10 50 0 0"/>
            </Grid>
            
        </StackPanel>
    </Grid>
</Window>
