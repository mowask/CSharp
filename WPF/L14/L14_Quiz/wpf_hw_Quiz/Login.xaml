<Window x:Class="wpf_hw_Quiz.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_hw_Quiz"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="200" Width="300">
    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>-->
        <StackPanel Background="BurlyWood">
        <TextBox Text="{Binding CurrentUser.Login}" FontSize="18" Margin="10" HorizontalContentAlignment="Center"/>
        <TextBox Text="{Binding CurrentUser.Password}" FontSize="18" Margin="10" HorizontalContentAlignment="Center"/>
        <Button Content="Login" Command="{Binding LoginCommand}" FontSize="18" Margin="20" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
